{
  "name": "csic-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.1",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4"
  },
  "scripts": {
    "start": "ts-node-dev ./src/main.ts",
    "dev": "ts-node-dev --no-notify --respawn --transpileOnly ./src/main.ts",
    "test": "yarn generate && yarn lint && yarn typecheck && yarn format:check && yarn jest",
    "prepush-test": "yarn generate && yarn lint && yarn typecheck && yarn format:check && yarn local-jest",
    "lint": "eslint --max-warnings 0 \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit -p .",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "jest": "jest --coverage --passWithNoTests",
    "local-jest": "jest --coverage --passWithNoTests",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "eslint": "^6.5.1",
    "express": "^4.17.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "ts-node-dev": "^1.0.0-pre.43",
    "tsconfig.json": "^1.0.7"
  },
  "prettier": {
    "bracketSpacing": true,
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "tabWidth": 2
  },
  "pre-push": {
    "run": "prepush-test"
  }
}
